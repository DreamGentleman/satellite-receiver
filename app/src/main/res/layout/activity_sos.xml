        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sos"
        app:layout_constraintLeft_toRightOf="@id/tv_sos"
        app:layout_constraintRight_toRightOf="@id/v_sos" />

