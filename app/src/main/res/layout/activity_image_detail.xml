<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#185266"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/v_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#073F52"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:src="@mipmap/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/v_title"
        app:layout_constraintLeft_toLeftOf="@id/v_title"
        app:layout_constraintTop_toTopOf="@id/v_title" />

    <TextView
        android:id="@+id/tv_frequency_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细信息"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_title"
        app:layout_constraintLeft_toLeftOf="@id/v_title"
        app:layout_constraintRight_toRightOf="@id/v_title"
        app:layout_constraintTop_toTopOf="@id/v_title" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="60dp"
        android:text="接收时间：2024年7月26日   14时47分"
        android:textColor="#9CB2BA"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_title" />

    <View
        android:id="@+id/v_time"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="60dp"
        android:background="#80FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_message_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_time" />
</androidx.constraintlayout.widget.ConstraintLayout>